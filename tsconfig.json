{
  // "extends": "",
  "compilerOptions": {
    "target": "es2017", // "es2015" is "ES6"
    "module": "commonjs",
    "lib": ["es2017", "dom"], // "lib": [],
    "allowJs": true,
    "checkJs": true,
    // "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    // "outFile": "./",
    "outDir": "./build", // "./",
    // "rootDir": "./",
    // "composite": true,
    // "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    // "isolatedModules": true,

    "strict": true,
    "noImplicitAny": false, // "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    // "baseUrl": "./",
    // "paths": {},
    // "rootDirs": [],
    // "typeRoots": [],
    // "types": [],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "preserveSymlinks": true,

    // "sourceRoot": "",
    // "mapRoot": "",
    // "inlineSourceMap": true,
    // "inlineSources": true,
  },
  "include": [
    "./src/**/*",
    "./example/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules",
    "_old",
    "build",
    "docs",
    "temp",
    "out",
  ]
}
